<?xml version="1.0" encoding="utf-8"?><!-- app通用的对话框自定义布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/app_dialog_layout"
    style="@style/app_dialog_layout_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dip"
    android:layout_marginRight="16dip"
    android:background="@drawable/app_dialog_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/app_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="18dp"
        android:textColor="#000000"
        android:textSize="18dip"
        android:visibility="visible" />

    <TextView
        android:id="@+id/app_dialog_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        android:paddingTop="18dip"
        android:lineSpacingExtra="3dp"
        android:text="content"
        android:textColor="#757575"
        android:textSize="16dip" />

    <LinearLayout
        android:id="@+id/app_dialog_action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:paddingTop="18dp"
        android:paddingBottom="24dp"
        android:paddingRight="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/app_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textSize="14dp"
            android:textColor="#757575" />

        <TextView
            android:id="@+id/app_dialog_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:text="确定"
            android:textSize="14dp"
            android:textColor="#FF651A" />
    </LinearLayout>
</LinearLayout>